<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".TentangAct">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/putih"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/nameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:text="Tentang"/>

    </androidx.appcompat.widget.Toolbar>



        <ImageView
            android:id="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="20dp"
            android:layout_height="120dp"
            android:layout_below="@id/toolbar"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/ngerti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngerti IT"
            android:layout_below="@id/img"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/version"
            android:layout_below="@id/ngerti"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="Current Version 1.x.x" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/banyakngerti"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:text="Â© 2020 Banyakngerti"
        android:textSize="16dp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/banyakngerti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/email"
            android:text="banyakngerti.id" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:text="halo@banyakngerti.id" />


</RelativeLayout>